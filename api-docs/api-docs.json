{
    "openapi": "3.0.0",
    "info": {
        "title": "Covid Dashboard API",
        "license": {
            "name": "ITS"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://covid-dashboard-its.id",
            "description": "API server"
        },
        {
            "url": "http://localhost:4500",
            "description": "Local server"
        }
    ],
    "paths": {
        "/user/api/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User login",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/API-Key"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "username": "sugandi",
                                    "password": "password"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "API-Key": {
                "name": "API-Key",
                "in": "header",
                "required": false,
                "schema": {
                    "type": "string"
                }
            },
            "id": {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": {
                    "type": "string"
                }
            }
        }
    }
}
